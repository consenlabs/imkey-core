<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btc_getXpub_001"
            style="@style/button"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="btc_getXpub_001_主网" />

        <Button
            android:id="@+id/btc_getXpub_002"
            style="@style/button"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="btc_getXpub_002_测试网" />
        <Button
            android:id="@+id/btc_getAddress_001"
            style="@style/button"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="btc_getAddress_001_主网" />
        <Button
            android:id="@+id/btc_getAddress_002"
            style="@style/button"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="btc_getAddress_002_测试网" />
        <Button
            android:id="@+id/btc_getSegWitAddress_001"
            style="@style/button"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="btc_getSegWitAddress_001_主网" />
        <Button
            android:id="@+id/btc_getSegWitAddress_002"
            style="@style/button"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="btc_getSegWitAddress_002_测试网" />
        <Button
            android:id="@+id/etc_getaddress_001"
            style="@style/button"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="etc_getaddress_001_主网" />
        <Button
            android:id="@+id/etc_getaddress_002"
            style="@style/button"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="etc_getaddress_002_测试网" />


    </LinearLayout>

</ScrollView>